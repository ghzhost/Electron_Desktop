{
  "name": "verseweb-server",
  "version": "1.0.0",
  "description": "Servidor para VerseWEB",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "webdav-server": "^2.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.ghz.verseweb",
    "productName": "VerseWEB",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!tests/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "DefaultLoadingImage.jpg"
    },
    "mac": {
      "target": "dmg",
      "icon": "DefaultLoadingImage.jpg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "DefaultLoadingImage.jpg"
    }
  }
}
